<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.webkul.mobikul.marketplace.odoo">

    <!-- Allows unlocking your device and activating its screen so UI tests can succeed -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Allows for storing and retrieving screenshots -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".helper.OdooMarketplaceApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme.AppTheme.NoActionBar"
        android:vmSafeMode="true"
        tools:replace="name,icon,label,allowBackup">
        <activity android:name=".activity.SellerProfileActivity" />
        <activity android:name=".activity.MarketplaceLandingActivity" />
        <activity android:name=".activity.SellerDashBoardActivity" />
        <activity android:name=".activity.SellerOrdersListActivity" />
        <activity android:name=".activity.SellerProductsListActivity" />
        <activity android:name=".activity.SellerOrderDetailsActivity" />
        <activity android:name=".activity.AskToAdminActivity" />
        <activity android:name=".activity.BecomeSellerActivity" />
    </application>

</manifest>