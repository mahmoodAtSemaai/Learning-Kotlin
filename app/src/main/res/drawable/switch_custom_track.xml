<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_12" />
            <solid android:color="@color/grey_bg" />
            <size android:height="@dimen/size_1" />
            <stroke android:color="@color/transparent" android:width="@dimen/size_6"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_12" />
            <solid android:color="@color/background_appbar_color" />
            <size android:height="@dimen/size_8" />
            <stroke android:color="@color/transparent" android:width="@dimen/size_6"/>
        </shape>
    </item>
</selector>