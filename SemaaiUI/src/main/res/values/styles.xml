<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXT STYLES: Inheriting from TextAppearance.AppCompat for backward compatibility -->
    <style name="Semaai.TextAppearance.Overline" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- CAPTION TEXT -->
    <style name="Semaai.TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="Semaai.TextAppearance.Caption.Bold" parent="Semaai.TextAppearance.Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BODY TEXTS -->
    <style name="Base.Semaai.TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Semaai.TextAppearance.Body2" parent="Base.Semaai.TextAppearance.Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <!-- Don't Apply Bold Texts on long paragraphs -->
    <style name="Semaai.TextAppearance.Body2.Bold" parent="Semaai.TextAppearance.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Semaai.TextAppearance.Body1" parent="Base.Semaai.TextAppearance.Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <!-- Don't Apply Bold Texts on long paragraphs -->
    <style name="Semaai.TextAppearance.Body1.Bold" parent="Semaai.TextAppearance.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- SUBTITLES -->
    <style name="Semaai.TextAppearance.Subtitle3" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="Semaai.TextAppearance.Subtitle3.Bold" parent="Semaai.TextAppearance.Subtitle3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Semaai.TextAppearance.Subtitle2" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="Semaai.TextAppearance.Subtitle2.Bold" parent="Semaai.TextAppearance.Subtitle2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Semaai.TextAppearance.Subtitle2.Accent" parent="Semaai.TextAppearance.Subtitle2.Bold">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Semaai.TextAppearance.Subtitle1" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>

    <style name="Semaai.TextAppearance.Subtitle1.Bold" parent="Semaai.TextAppearance.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- HEADLINES -->
    <style name="Base.Semaai.TextAppearance.Headline" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Semaai.TextAppearance.Headline6" parent="Base.Semaai.TextAppearance.Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>

    <style name="Semaai.TextAppearance.Headline6.Orange" parent="Semaai.TextAppearance.Headline6">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="Semaai.TextAppearance.Headline6.White" parent="Semaai.TextAppearance.Headline6">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="Semaai.TextAppearance.Headline5" parent="Base.Semaai.TextAppearance.Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <style name="Semaai.TextAppearance.Headline5.Orange" parent="Semaai.TextAppearance.Headline5">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Semaai.TextAppearance.Headline5.White" parent="Semaai.TextAppearance.Headline5">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="Semaai.TextAppearance.Headline4" parent="Base.Semaai.TextAppearance.Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/font_size_32</item>
    </style>
</resources>